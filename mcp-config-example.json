{
  "mcpServers": {
    "supabase": {
      "command": "npx",
      "args": ["-y", "supabase-mcp"],
      "env": {
        "SUPABASE_URL": "https://SEU-PROJETO.supabase.co",
        "SUPABASE_ANON_KEY": "COLOQUE_SUA_ANON_KEY_AQUI",
        "SUPABASE_SERVICE_ROLE_KEY": "COLOQUE_SUA_SERVICE_ROLE_KEY_AQUI"
      }
    },
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "/caminho/para/seu/projeto/v0-nossa-maternidade-app",
        "/caminho/para/seu/projeto"
      ]
    },
    "git": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-git",
        "--repository",
        "/caminho/para/seu/projeto/v0-nossa-maternidade-app"
      ]
    },
    "brave-search": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-brave-search"],
      "env": {
        "BRAVE_API_KEY": "COLE_SUA_CHAVE_BRAVE_AQUI"
      }
    }
  }
}
