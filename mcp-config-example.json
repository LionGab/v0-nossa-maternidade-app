{
  "mcpServers": {
    "supabase": {
      "command": "npx",
      "args": ["-y", "supabase-mcp"],
      "env": {
        "SUPABASE_URL": "COLE_SUA_URL_SUPABASE_AQUI",
        "SUPABASE_ANON_KEY": "COLE_SUA_CHAVE_ANONIMA_AQUI",
        "SUPABASE_SERVICE_ROLE_KEY": "COLE_SUA_CHAVE_SERVICE_ROLE_AQUI"
      }
    },
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "/workspace"
      ]
    },
    "git": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-git",
        "--repository",
        "/workspace"
      ]
    },
    "brave-search": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-brave-search"],
      "env": {
        "BRAVE_API_KEY": "COLE_SUA_CHAVE_BRAVE_AQUI"
      }
    }
  }
}